<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
       >

    <bean id="dataSource" class="oracle.jdbc.pool.OracleDataSource">
        <!--<property name="URL" value="jdbc:oracle:thin:scott/tiger@localhost:1521:ORCL"/>-->
        <property name="URL" value="jdbc:oracle:thin:ogk2/ogk2@localhost:1521:ORCL"/>
    </bean>

    <bean id="dao" class="ru.reshet.dao.DaoImpl">
        <property name="dataSource" ref="dataSource"/>
        <property name="map">
            <map>
                <entry key="TABLE">
                    <set>
                        <value>COMMENT</value>
                        <value>INDEX</value>
                    </set>
                </entry>
                <entry key="VIEW">
                    <set>
                        <value>COMMENT</value>
                    </set>

                </entry>
            </map>
        </property>
        <property name="transformParams">
            <map>
                <entry key="SEGMENT_ATTRIBUTES" value="0"/>
                <entry key="SQLTERMINATOR" value="1"/>
                <entry key="CONSTRAINTS_AS_ALTER" value="1"/>
            </map>
        </property>
        <property name="onlyTypes">
            <set>
                <value>TABLE</value>
                <value>VIEW</value>
            </set>
        </property>
    </bean>


    <bean id="fileWorker" class="ru.reshet.filework.FileWorkerImpl">
        <property name="outputPath" value="C:/temp/"/>
        <property name="sortByDirectory" value="true"/>
    </bean>

    <bean id="worker" class="ru.reshet.worker.WorkerImpl">
        <property name="dao" ref="dao"/>
        <property name="fileWorker" ref="fileWorker"/>
    </bean>

    <!--<util:map id="transformParamss">-->
        <!--<entry key="SEGMENT_ATTRIBUTES" value="0"/>-->
        <!--&lt;!&ndash;<entry key="SQLTERMINATOR" value="1" />&ndash;&gt;-->
        <!--&lt;!&ndash;<entry key="CONSTRAINTS_AS_ALTER" value="1"/>&ndash;&gt;-->
    <!--</util:map>-->


</beans>